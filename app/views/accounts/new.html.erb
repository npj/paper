<div class="accounts new">
  <h2><%= t('devise.accounts.sign_up') %></h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :autocomplete => :off }) do |f| %>
    <div class="form account new">
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :name, t('devise.name') %>
        <%= f.text_field(:name) %>
      </div>

      <div class="field">
        <%= f.label :email, t('devise.email') %>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password, t('devise.password') %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t('devise.password_confirmation') %>
        <%= f.password_field :password_confirmation %>
      </div>
      
      <div class="field recaptcha">
        <%= raw(recaptcha_tag(:challenge, :display => { :theme => "clean" })) %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.accounts.sign_up') %>
      </div>
    </div>
  <% end %>

  <%= render "links" %>
</div>
