<div class="accounts login">
  <h2><%= t('devise.sessions.sign_in') %></h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form session new">
      <div class="field">
        <%= f.label :email, t('devise.email') %>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password, t('devise.password') %>
        <%= f.password_field :password %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %> <%= f.label :remember_me, t('devise.remember_me') %>
        </div>  
      <% end -%>

      <div class="actions">
        <%= f.submit t('devise.sessions.sign_in') %>
      </div>
    </div>
  <% end %>

  <%= render "links" %>
</div>