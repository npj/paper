<div class="post">
  <div class="title">
    <%= @post.title %>
  </div>
  <div class="username">
    <span class="name"><%= @post.user.name %></span>
  </div>
  <div class="datetime">
    <%= published_at(@post) %>
  </div>
  <div class="body">
    <%= @post.html.html_safe %>
  </div>
</div>
<% if user_signed_in? %>
  <%= render(:partial => "comments/reply", :locals => { :parent => @post }) %>
<% else %>
  <%= link_to(t('sign_in_to_reply'), new_user_session_path) %>
<% end %>
<%= render(:partial => "comments/comments", :locals => { :parent => @post }) %>