<%= form_for(@post) do |form| %>
  <div class="form post new">
    <div class="field">
      <div class="label"><%= form.label(:title, t('.title')) %></div>
      <div class="text"><%= form.text_field(:title) %></div>
    </div>
    <div class="field">
      <div class="label"><%= form.label(:markdown, t('.body')) %></div>
      <div class="textarea"><%= form.text_area(:markdown) %></div>
    </div>
    <div class="field">
      <div class="label"><%= form.label(:privacy, t('.privacy')) %></div>
      <div class="select"><%= form.select(:privacy, Post::PRIVACY) %></div>
      <div class="explain">
        <ul>
          <li><strong><%= t('doc.post.public.term') %></strong>: <%= t('doc.post.public.meaning') %></li>
          <li><strong><%= t('doc.post.private.term') %></strong>: <%= t('doc.post.private.meaning') %></li>
        </ul>
      </div>
    </div>
    <div class="field">
      <div class="label"><%= form.label(:published_at, t('.publish_at')) %></div>
      <div class="datetime"><%= form.datetime_select(:published_at) %></div>
      <div class="explain"><%= t('doc.post.publish_at') %></div>
    </div>
    <div class="actions">
      <div class="cancel">
        <%= link_to(t('cancel'), root_path) %>
      </div>
      <div class="submit">
        <button class="submit"><%= t('.submit') %></button>
      </div>
    </div>
  </div>
<% end %>